@model LmycDataLib.Models.UserMembers
@{
    ViewBag.Title = "Remove";
}

<div class="content-body">
    <h2>Remove Role</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.EmailConfirmed)
            @Html.HiddenFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.SecurityStamp, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.PhoneNumberConfirmed)
            @Html.HiddenFor(model => model.TwoFactorEnabled)
            @Html.HiddenFor(model => model.LockoutEndDateUtc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.LockoutEnabled)
            @Html.HiddenFor(model => model.AccessFailedCount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Street, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Province, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.SailingExperience, new { htmlAttributes = new { @class = "form-control" } })
            <div class="form-group">
                @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Role", (SelectList)ViewBag.roleName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Remove" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
